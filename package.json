{
    "license": "UNLICENSED",
    "name": "webclient",
    "version": "0.3.0",
    "private": true,
    "homepage": "./",
    "dependencies": {
        "apollo-boost": "^0.1.5",
        "apollo-client": "^2.3.5",
        "arc-frontend-components": "^0.3.0-SNAPSHOT-master.69",
        "deepmerge": "^2.1.1",
        "graphql": "^0.13.2",
        "graphql-tag": "^2.9.2",
        "md5": "^2.2.1",
        "react": "^16.4.2",
        "react-apollo": "^2.1.8",
        "react-dom": "^16.4.2",
        "react-router-dom": "^4.2.2",
        "react-scripts": "1.1.4"
    },
    "devDependencies": {
        "apollo-cache-persist": "^0.1.1",
        "apollo-test-utils": "^0.3.2",
        "cypress": "^3.0.3",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest-junit": "^5.1.0",
        "mocha": "^5.2.0",
        "mocha-junit-reporter": "^1.17.0",
        "moment-timezone": "^0.5.21",
        "prettier": "1.12.1",
        "react-test-renderer": "^16.4.2",
        "uuid": "^3.3.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom --runInBand --verbose",
        "test:ci": "react-scripts test --env=jsdom --runInBand --verbose -u --testResultsProcessor ./node_modules/jest-junit",
        "eject": "react-scripts eject",
        "prettier": "prettier \"src/**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "cy:local": "cypress run --env host=http://0.0.0.0/ui --config video=false",
        "cy:localvid": "cypress run --env host=http://0.0.0.0/ui",
        "cy:drunvid": "cypress verify && cypress run --env host=http://frontend-nginx/ui"
    },
    "prettier": {
        "semi": false,
        "trailingComma": "all",
        "singleQuote": true
    },
    "jest-junit": {
        "suiteName": "ui-unit-tests",
        "output": "test-results/junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{classname}{title}",
        "ancestorSeparator": " > ",
        "usePathForSuiteName": "true"
    }
}